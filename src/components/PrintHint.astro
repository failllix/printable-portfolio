---
import LanguageSwitcher from "./LanguageSwitcher.astro";
import Paragraph from "./Paragraph.astro";

import { useTranslations, getLangFromUrl } from "../i18n/utils";

const { cvFilename } = Astro.props;

const lang = getLangFromUrl(Astro.url);

const t = useTranslations(lang);
---

<div
  class="print:hidden sticky bottom-[calc(var(--safe-area-max-inset-bottom-raw)-var(--safe-area-max-inset-bottom))] left-0 flex flex-col sm:flex-row items-center justify-center w-full px-3 py-2 bg-gray-800 text-white"
>
  <Paragraph className="text-center">
    {t("text.print_hint")}<a
      href={`/${cvFilename}`}
      target="_blank"
      class="px-2 py-1 bg-white text-black
rounded-md cursor-pointer"
      >{t("text.print_highlight")}</a
    >
  </Paragraph>
  <div class="sm:ml-4 flex items-center">
    <a href="https://github.com/failllix/printable-portfolio">
      <img class="w-6 h-6" src="/github-mark-white.svg" alt="GitHub logo" />
    </a>
    <LanguageSwitcher className="ml-4" />
  </div>
</div>
