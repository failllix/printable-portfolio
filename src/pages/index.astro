      {
        allCertifications.map(({ data }) => {
          return (
            <Certification name={data.name} link={data.link} icon={data.icon} />
          );
        })
      }
    </ul>
  </Section>
  <Section className="print:hidden">
    <Heading2>Projects</Heading2>
    <ul class="grid md:grid-cols-2 gap-4">
